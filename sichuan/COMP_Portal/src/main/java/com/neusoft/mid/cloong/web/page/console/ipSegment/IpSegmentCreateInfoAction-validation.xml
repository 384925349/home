<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE validators PUBLIC 
  		"-//Apache Struts//XWork Validator 1.0.2//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
	<field name="appId">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>业务不能为空，请重新选择</message>
		</field-validator>
	</field>

	<field name="IpSegmentDesc">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>IP段名称不能为空，请重新输入</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">20</param>
			<message>IP段名称最大长度为20</message>
		</field-validator>
	</field>
	
	<field name="ipSubnet">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>IP段不能为空，请重新选择</message>
		</field-validator>
	</field>
</validators>
