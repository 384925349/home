<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>comp_portal</id>
	<formats>
		<format>war</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>WEB-INF/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>target/classes/com</directory>
			<outputDirectory>/WEB-INF/classes/com</outputDirectory>
		</fileSet>
		<!-- 通用 DB script -->
		<fileSet>
			<directory>src/main/db_script/common
			</directory>
			<outputDirectory>/db_script</outputDirectory>
			<includes>
				<include>/*.sql</include>
			</includes>
		</fileSet>
		<!-- 通用配置文件 -->
		<fileSet>
			<directory>src/main/resources/comm_conf
			</directory>
			<outputDirectory>WEB-INF/classes/conf
			</outputDirectory>
			<includes>
				<include>**/*.xml</include>
				<include>**/*.properties</include>
			</includes>
			<excludes>
				<exclude>struts-config/struts.xml</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/comm_conf/struts-config</directory>
			<outputDirectory>WEB-INF/classes</outputDirectory>
			<includes>
				<include>struts.xml</include>
			</includes>
		</fileSet>


		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>WEB-INF/classes</outputDirectory>
			<includes>
				<include>log4j.properties</include>
				<include>jdbc_config.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/schema
			</directory>
			<outputDirectory>WEB-INF/classes/schema
			</outputDirectory>
			<includes>
				<include>*.xsd</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp/WEB-INF</directory>
			<outputDirectory>WEB-INF</outputDirectory>
			<includes>
				<include>web.xml</include>
				<include>sitemesh.xml</include>
				<include>decorators.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>login.jsp</include>
				<include>register_byQuestion.jsp</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>/readme</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>